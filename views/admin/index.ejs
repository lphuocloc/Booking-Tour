<%- include('../partials/header') %>
  <div class="container mt-5">
    <h1 class="mb-4">Admin Dashboard</h1>
    <p><a class="btn btn-success mb-3" href="/admin/tours">Manage Tours</a></p>
    <h2>Bookings</h2>
    <ul class="list-group">
      <% bookings.forEach(b=> { %>
        <li class="list-group-item">
          <strong>
            <%= b.customerName %>
          </strong> booked <strong>
            <%= b.tourId.title %>
          </strong> for <span class="badge bg-primary">$<%= b.price %></span> on <%= b.date.toLocaleString() %>
        </li>
        <% }) %>
    </ul>
  </div>
  <%- include('../partials/footer') %>