<%- include('../partials/header') %>
  <div class="booking-container">
    <h1 class="booking-title">Đặt tour: <%= tour.title %>
    </h1>
    <form action="/bookings" method="POST" class="booking-form">
      <input type="hidden" name="tourId" value="<%= tour._id %>" />
      <div class="mb-3">
        <label class="form-label">Họ tên</label>
        <input type="text" class="form-control" name="customerName" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" name="customerEmail" required />
      </div>
      <button type="submit" class="btn btn-booking">Xác nhận đặt tour ($<%= tour.price %>)</button>
    </form>
  </div>
  <%- include('../partials/footer') %>