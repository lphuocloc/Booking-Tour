<%- include('../partials/header') %>
<style>
  /* Only keep gradient for sidebar background */
  .profile-sidebar-gradient {
    background: linear-gradient(180deg, #e3f0ff 0%, #f8fbff 100%);
  }
</style>
<div class="container-fluid mt-5">
  <div class="row justify-content-center">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 mb-4">
      <div class="d-flex flex-column justify-content-between align-items-stretch bg-white shadow rounded-4 profile-sidebar-gradient" style="min-height: 500px;">
        <div class="mt-3 px-3">
          <div class="list-group list-group-flush">
            <a href="/users/profile" class="list-group-item list-group-item-action active rounded-3 mb-2 d-flex align-items-center border-0" style="background:#0d6efd;">
              <i class="bi bi-person-fill me-2"></i> Profile
            </a>
            <a href="/users/profile/booking-history" class="list-group-item list-group-item-action rounded-3 d-flex align-items-center border-0 text-primary">
              <i class="bi bi-clock-history me-2"></i> Booking History
            </a>
          </div>
        </div>
        <div class="mb-3 px-3">
          <form action="/users/logout" method="POST">
            <button type="submit" class="btn btn-outline-danger w-100 rounded-pill d-flex align-items-center justify-content-center">
              <i class="bi bi-box-arrow-right me-2"></i> Logout
            </button>
          </form>
        </div>
      </div>
    </div>
    <!-- Main Content -->
    <div class="col-md-9 col-lg-7">
      <div class="card shadow rounded p-4">
        <div class="row g-4 align-items-center">
          <!-- Profile Picture & Actions -->
          <div class="col-md-4 text-center border-end">
            <div class="mb-3">
              <i class="bi bi-person-circle" style="font-size: 5rem; color: #0d6efd;"></i>
            </div>
            <div class="d-grid gap-2">
              <a href="/users/profile/edit" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Edit Profile
              </a>
            </div>
          </div>
          <!-- Profile Info -->
          <div class="col-md-8">
            <div class="row g-3">
              <div class="col-sm-6">
                <label class="form-label">Full Name</label>
                <div class="form-control bg-light"><%= user.fullname %></div>
              </div>
              <div class="col-sm-6">
                <label class="form-label">Email</label>
                <div class="form-control bg-light"><%= user.email %></div>
              </div>
              <div class="col-sm-6">
                <label class="form-label">Phone Number</label>
                <div class="form-control bg-light"><%= user.phonenumber %></div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
